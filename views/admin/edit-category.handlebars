{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Editar Categoria</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/category/edit" method='POST'>
                <input type="hidden" value="{{category._id}}">

            <label for="nome">Nome</label>
                <input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control" value="{{category.nome}}">

            <label for="slug">Slug</label>
                <input type="text" name="slug" id="slug" placeholder="Slug da categoria" class="form-control" value="{{category.slug}}">

            <button class="btn btn-success mt-4" type="submit">Editar categoria</button>

        </form>
    </div>
</div>