    {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}

    {{/each}}
    <h2>Editar Postagem!</h2>
    <hr>
<div class="card">

    <div class="card-body">
        <form action="/admin/posts/edit" method="post">
            <input type="hidden" name="id" value="{{posts._id}}">
            <label for="titulo" >Título:</label>
                <input type="text" class="form-control" name="titulo" placeholder="Título da postagem" value="{{posts.titulo}}">
            <label for="slug ">Slug:</label>
                <input type="text" class="form-control" name="slug" placeholder="slug da postagem" value="{{posts.slug}}">
            <label for="description ">Descrição:</label>
                <input type="text" class="form-control" name="description"  placeholder="Descrição da postagem" value="{{posts.description}}">
            <label for="content ">Conteúdo:</label>
               <textarea name="content" class="form-control">{{posts.conteudo}}</textarea>

            <label for="categories"></label>
            <select name="categories" class="form-control">
                <option value="1" >Selecione a categoria</option>
                {{#each categories}}
                <option value="{{_id}}" >{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma Categoria encontrada </option>
                {{/each}}
            </select>

            <button class="btn btn-success mt-4" type="submit">Editar Postagem</button>
            <button type="reset" class="btn btn-warning mt-4 ml-2">Resetar</button>
        </form>
    </div>
</div>
